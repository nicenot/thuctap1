@model thuviensachcaocap.Models.Book

@{
    ViewBag.Title = Model.Title;
}

<div class="row mt-4">
    <div class="col-md-4">
        <img src="@Model.CoverImage"
             class="img-fluid rounded shadow"
             alt="@Model.Title" />
    </div>

    <div class="col-md-8">
        <h2>@Model.Title</h2>

        @if (Model.IsVIP == true)
        {
            <span class="badge bg-warning text-dark mb-2">Sách VIP</span>
        }

        <p class="mt-3">
            <strong>Trạng thái:</strong> @Model.Status
        </p>

        <p>
            <strong>Ngày đăng:</strong>
            @(Model.CreatedAt.HasValue
                ? Model.CreatedAt.Value.ToString("dd/MM/yyyy")
                : "N/A")
        </p>

        <hr />

        <h5>Nội dung</h5>
        <p>@Model.Description</p>

        <a href="@Url.Action("Index", "Books")"
           class="btn btn-secondary mt-3">
            ← Quay lại
        </a>

        <a href="#"
           class="btn btn-success mt-3">
            📖 Đọc sách
        </a>
    </div>
</div>
